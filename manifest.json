{
	"manifest_version": 2,
	"name": "Mark My Search",
	"description": "Find what you searched for anywhere on the web. Focus your research and find areas of interest with this intuitive instant word highlighter.",
	"version": "1.2.0",

	"browser_specific_settings": {
		"gecko": {
			"id": "{3c87dcad-dbbd-4be1-b07b-b6d0739b0aec}"
		}
	},

	"icons": {
		"48": "/icons/mms.svg",
		"96": "/icons/mms.svg"
	},

	"permissions": [
		"<all_urls>",
		"tabs",
		"storage",
		"search",
		"contextMenus"
	],

	"optional_permissions": [
		"bookmarks"
	],

	"background": {
		"page": "/pages/background.html",
		"persistent": false
	},

	"options_ui": {
		"page": "/pages/options.html",
		"browser_style": true
	},

	"browser_action": {
		"default_icon": "/icons/mms.svg",
		"default_title": "Mark My Search",
		"default_popup": "/pages/popup.html"
	},

	"web_accessible_resources": [
		"/icons/edit.svg"
	],

	"commands": {
		"toggle-research-tab": {
			"suggested_key": { "default": "Alt+Shift+M" },
			"description": "Toggle in current tab"
		},
		"toggle-research-global": {
			"suggested_key": { "default": "Alt+Shift+J" },
			"description": "Toggle automatic activation when searching"
		},
		"toggle-bar": {
			"suggested_key": { "default": "Ctrl+Shift+F" },
			"description": "Toggle highlighting toolbar"
		},
		"toggle-highlights": {
			"suggested_key": { "default": "Alt+Shift+D" },
			"description": "Toggle display of highlighting"
		},
		"toggle-select": {
			"description": "Toggle between the two select modes [advanced]"
		},
		"advance-global": {
			"suggested_key": { "default": "Alt+Space" },
			"description": "Jump to next term in page"
		},
		"advance-global-reverse": {
			"suggested_key": { "default": "Alt+Shift+Space" },
			"description": "Jump to previous term in page"
		},
		"focus-term-append": {
			"description": "Focus the toolbar input for appending a new term"
		},
		"select-term-0": { "description": "Select term 0" },
		"select-term-1": { "description": "Select term 1" },
		"select-term-2": { "description": "Select term 2" },
		"select-term-3": { "description": "Select term 3" },
		"select-term-4": { "description": "Select term 4" },
		"select-term-5": { "description": "Select term 5" },
		"select-term-6": { "description": "Select term 6" },
		"select-term-7": { "description": "Select term 7" },
		"select-term-8": { "description": "Select term 8" },
		"select-term-9": { "description": "Select term 9" },
		"select-term-0-reverse": { "description": "Select term 0 (reverse)" },
		"select-term-1-reverse": { "description": "Select term 1 (reverse)" },
		"select-term-2-reverse": { "description": "Select term 2 (reverse)" },
		"select-term-3-reverse": { "description": "Select term 3 (reverse)" },
		"select-term-4-reverse": { "description": "Select term 4 (reverse)" },
		"select-term-5-reverse": { "description": "Select term 5 (reverse)" },
		"select-term-6-reverse": { "description": "Select term 6 (reverse)" },
		"select-term-7-reverse": { "description": "Select term 7 (reverse)" },
		"select-term-8-reverse": { "description": "Select term 8 (reverse)" },
		"select-term-9-reverse": { "description": "Select term 9 (reverse)" }
	}
}

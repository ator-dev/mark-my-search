	"description": "A WebExtension for improving online research efficiency.",

	"icons": {
		"48": "/icons/firemod48.png",
		"96": "/icons/firemod96.png"
	},

	"manifest_version": 2,

	"name": "Research Optimiser",

	"permissions": [
		"history",
		"webNavigation",
		"cookies",
		"contextMenus",
		"bookmarks",
		"<all_urls>"
	],
	
	"version": "1.0"
}

{
	"manifest_version": 3,
	"name": "Mark My Search",
	"description": "Focus your research. Find what you searched for.\nHighlights your query on any engine, for any website you visit.",
	"version": "1.0.10",

	"icons": {
		"48": "/icons/mms-48.png",
		"96": "/icons/mms-96.png"
	},

	"permissions": [
		"webNavigation",
		"scripting",
		"storage",
		"contextMenus"
	],

	"host_permissions": [
		"<all_urls>"
	],

	"background": {
		"service_worker": "/dist/background.js"
	},

	"action": {
		"default_icon": {
			"16": "/icons/mms-16.png",
			"32": "/icons/mms-32.png"
		},
		"default_title": "Mark My Search",
		"default_popup": "/pages/popup.html"
	},

	"commands": {
		"toggle-bar": {
			"suggested_key": { "default": "Ctrl+Shift+F" },
			"description": "Toggle highlighting toolbar"
		},
		"toggle-highlight": {
			"suggested_key": { "default": "Alt+Shift+D" },
			"description": "Toggle display of highlighting"
		},
		"toggle-select": {
			"description": "Toggle between the two select modes [advanced]"
		},
		"advance-global": {
			"suggested_key": { "default": "Alt+Space" },
			"description": "Jump to next term in page"
		},
		"advance-global-reverse": {
			"suggested_key": { "default": "Alt+Shift+Space" },
			"description": "Jump to previous term in page"
		},
		"select-term-0": {
			"description": "Select term 0"
		},
		"select-term-1": {
			"description": "Select term 1"
		},
		"select-term-2": {
			"description": "Select term 2"
		},
		"select-term-3": {
			"description": "Select term 3"
		},
		"select-term-4": {
			"description": "Select term 4"
		},
		"select-term-5": {
			"description": "Select term 5"
		},
		"select-term-6": {
			"description": "Select term 6"
		},
		"select-term-7": {
			"description": "Select term 7"
		},
		"select-term-8": {
			"description": "Select term 8"
		},
		"select-term-9": {
			"description": "Select term 9"
		},
		"select-term-0-reverse": {
			"description": "Select term 0 (reverse)"
		},
		"select-term-1-reverse": {
			"description": "Select term 1 (reverse)"
		},
		"select-term-2-reverse": {
			"description": "Select term 2 (reverse)"
		},
		"select-term-3-reverse": {
			"description": "Select term 3 (reverse)"
		},
		"select-term-4-reverse": {
			"description": "Select term 4 (reverse)"
		},
		"select-term-5-reverse": {
			"description": "Select term 5 (reverse)"
		},
		"select-term-6-reverse": {
			"description": "Select term 6 (reverse)"
		},
		"select-term-7-reverse": {
			"description": "Select term 7 (reverse)"
		},
		"select-term-8-reverse": {
			"description": "Select term 8 (reverse)"
		},
		"select-term-9-reverse": {
			"description": "Select term 9 (reverse)"
		}
	}
}
